.PHONY: run_with_live_reload run migrate rollback create

DB_HOST=
DB_PORT=
DB_USERNAME=
DB_PASSWORD=
DB_DATABASE=


DSN="mysql://${DB_USERNAME}:${DB_PASSWORD}@tcp(${DB_HOST}:${DB_PORT})/${DB_DATABASE}?charset=utf8mb4&parseTime=True&loc=Local"

run_with_live_reload:
	uvicorn main:app --reload

run:
	uvicorn main:app

migrate:
	./migrate.darwin-arm64 -database ${DSN} -path db/migrations up

rollback:
	./migrate.darwin-arm64 -database ${DSN} -path db/migrations down 1

create:
	./migrate.darwin-arm64 create -ext sql -dir db/migrations "${NAME}"

.PHONY: freeze
freeze:
	pip freeze > requirements.txt
